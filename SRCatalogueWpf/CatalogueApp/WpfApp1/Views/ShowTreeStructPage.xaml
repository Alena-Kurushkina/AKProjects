    <Page.Resources>
        <DataTemplate DataType="{x:Type viewmodels:ProjectsFileViewModel}">
            <views:ProjectsFilePage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:PicturesFileViewModel}">
